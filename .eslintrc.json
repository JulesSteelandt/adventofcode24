{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "prettier/prettier": ["error", { "singleQuote": true, "trailingComma": "es5" }],
      "no-unused-vars":"off",
      "no-loop-func": "off",
      "no-use-before-define": "off"
    }
  }
  